    	<Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
    	<TextBlock HorizontalAlignment="Center" Height="45" Margin="68,419,67,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="345" FontSize="45" FontFamily="Georgia" Text="Ганс Айзенк" Foreground="#FFFBF9F9" TextAlignment="Center" FontWeight="Medium"/>
