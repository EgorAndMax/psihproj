    	<Rectangle Fill="{ThemeResource AppBarBackgroundThemeBrush}" HorizontalAlignment="Left" Height="13" Margin="231,480,0,0" StrokeStartLineCap="Triangle" Stroke="#FFFBF9F9" StrokeThickness="3" VerticalAlignment="Top" Width="13" RenderTransformOrigin="0.056,-2.15"/>
    	<Rectangle Fill="{ThemeResource AppBarBackgroundThemeBrush}" HorizontalAlignment="Left" Height="13" Margin="321,480,0,0" StrokeStartLineCap="Triangle" Stroke="#FFFBF9F9" StrokeThickness="3" VerticalAlignment="Top" Width="13" RenderTransformOrigin="0.056,-2.15"/>
